.side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        =current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__btn
          = link_to new_group_path, class: "side-header__box__menu__btn__link side-header__box__menu__btn__link--make-group" do
            = fa_icon "edit", class: "side-header__box__menu__btn__link--make-group-icon"
        %li.side-header__box__menu__btn
          = link_to edit_user_path(current_user), class: "side-header__box__menu__btn__link side-header__box__menu__btn__link--edit-account" do
            = fa_icon "cog", class: "side-header__box__menu__btn__link--edit-account-icon"
  .side-groups
    = render partial: "shared/side-group", locals: { current_user: current_user }